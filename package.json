{
  "name": "llava",
  "productName": "llava",
  "version": "1.0.63",
  "description": "AI Meeting Notes",
  "author": "llava",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac --publish always",
    "dist:win": "electron-builder --win --x64 --publish always",
    "release": "npm run dist:mac && npm run dist:win"
  },
  "devDependencies": {
    "@electron/notarize": "^3.0.1",
    "electron": "^28.1.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.llava.app",
    "productName": "llava",
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.productivity",
      "icon": "images/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "extendInfo": {
        "NSMicrophoneUsageDescription": "This app needs microphone access to transcribe your meetings and conversations.",
        "NSSystemAdministrationUsageDescription": "This app needs system audio access to capture audio from your computer for transcription."
      },
      "extraResources": [
        ".env",
        {
          "from": "node_modules/ffmpeg-static/ffmpeg",
          "to": "ffmpeg"
        }
      ]
    },
    "dmg": {
      "background": "images/blue_noise.jpg",
      "window": {
        "width": 600,
        "height": 550
      }
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "images/icon.ico",
      "extraResources": [
        ".env",
        {
          "from": "binaries/win/ffmpeg.exe",
          "to": "ffmpeg.exe"
        }
      ]
    },
    "publish": [
      {
        "provider": "github",
        "owner": "zainmfjavaid",
        "repo": "llava",
        "releaseType": "release"
      }
    ],
    "afterSign": "build/notarize.js"
  },
  "dependencies": {
    "@deepgram/sdk": "^4.2.0",
    "dotenv": "^16.5.0",
    "ffmpeg-static": "^5.2.0",
    "update-electron-app": "^3.1.1"
  }
}
